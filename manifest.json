{
    "manifest_version": 2,
    "name": "Youtube Replay Count",
    "version": "0.1",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/watch*"
        ],
        "js": ["script.js"] 
      }
    ]
  }